<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ScrollBar">
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <!--Means the scroll bar will be somewhat overlaid over recycler view-->
        <item name="android:smoothScrollbar">true</item>
        <item name="android:scrollbarThumbVertical">@drawable/vertical_scroll_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/vertical_scroll_track</item>
    </style>
</resources>
